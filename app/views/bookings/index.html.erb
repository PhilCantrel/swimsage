<p id="notice"><%= notice %></p>

<h1>Bookings</h1>

<table>
  <thead>
    <tr>
      <th>Instructor</th>
      <th>User</th>
      <th>Student</th>
      <th>Timeslot</th>
      <th>Date</th>
      <th>Cost</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bookings.each do |booking| %>
      <tr>
        <td><%= booking.instructor_id %></td>
        <td><%= booking.user_id %></td>
        <td><%= booking.student_id %></td>
        <td><%= booking.timeslot_id %></td>
        <td><%= booking.date %></td>
        <td><%= booking.cost %></td>
        <td><%= link_to 'Show', booking %></td>
        <td><%= link_to 'Edit', edit_booking_path(booking) %></td>
        <td><%= link_to 'Destroy', booking, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Booking', new_booking_path %>
